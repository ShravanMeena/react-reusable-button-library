{
    "name": "react-reusable-button-library",
    "repository": {
        "type": "git",
        "url": "https://github.com/shravanmeena/react-reusable-button-library.git"
    },
    "version": "1.0.1",
    "description": "A component library for getting people started with easy to re-use components for everyday projects.",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs"
    },
    "author": "Shravan Meena",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "typescript": "^4.5.2"
    },
    "peerDependencies": {
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
    }
}
